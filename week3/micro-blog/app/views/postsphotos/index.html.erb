<p id="notice"><%= notice %></p>

<h1>Index</h1>

<h2>Posts</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Created</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.created_at.strftime("%d.%m.%Y")%></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Photos</h2>

<table>
  <% @photos.each_slice(5) do |photos| %>
    <tr>
      <% photos.each do |photo| %>
        <td>
          <%= image_tag photo.url , size: "200x200", alt: photo.title%><br>
          <strong><%= photo.title %></strong><br>
          <strong>created: </strong>
          <%= photo.created_at.strftime("%d.%m.%Y") %><br>
          <%= link_to 'Show', photo %><br>
          <%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %><br>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>
