<h1>Listing Solutions</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @solutions.each do |solution| %>
      <tr>
        <td><%= solution.code %></td>
        <td><%= link_to 'Show', lecture_task_solution_path(solution.task.lecture, solution.task, solution) %></td>
        <td><%= link_to 'Edit', edit_lecture_task_solution_path(solution.task.lecture, solution.task, solution) %></td>
        <td><%= link_to 'Destroy', lecture_task_solution_path(solution.task.lecture, solution.task, solution), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New solution', new_lecture_task_solution_path %>