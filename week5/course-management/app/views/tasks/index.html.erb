<h1>Listing Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.description%></td>
        <td><%= link_to 'Show', lecture_task_path(task.lecture, task) %></td>
        <td><%= link_to 'Edit', edit_lecture_task_path(task.lecture, task) %></td>
        <td><%= link_to 'Destroy', lecture_task_path(task.lecture, task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_lecture_task_path %>